<div class="ui vertically divided grid">
    <div class="two column row">
            <div class="column">
                <div class="item">
                    <h2>
                        <% if @user.avatar.attached? %>
                            <%= image_tag @user.avatar, class: "ui avatar image" %>
                        <% elsif @user.image %>
                            <%= image_tag @user.image, class: "ui avatar image" %>
                        <% else %>
                            <%= image_tag avatar_url(@user), class: "ui avatar image" %>
                        <% end %>
                        <%= "#{@user.first_name} #{@user.last_name}" %>
                    </h2>
                </div>
            </div>
            <div class="column"><%= render 'users/profile_button' %></div>
    </div>
</div>

<h3>About Me</h3>
<p><%= Faker::Lorem.paragraph %></p>

<h3>Interests</h3>
<p><%= Faker::Lorem.words(12).join(", ").capitalize %></p>

<h3>HP quote of the day:</h3>
<p><%= Faker::HarryPotter.quote %>

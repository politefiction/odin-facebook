<% flash.each do |key, value| %>
    <div class="<%= flash_class(key) %>">
        <div class="header">
            <%= flash_header(key) %>
        </div>
        <ul class="list">
            <% if value.is_a? Array %>
                <% value.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            <% else %>
                <li><%= value %></li>
            <% end %>
        </ul>
    </div>
<% end %>
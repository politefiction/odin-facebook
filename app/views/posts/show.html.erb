<div class="post-comment-container">
    <div class="post-container">
        <h2><%= @post.title %></h2>
        <p class="formatted-author-time">
            Posted by <%= "#{@post.user.first_name} #{@post.user.last_name}" %> at <%= "#{@post.created_at.strftime("%I:%M %P, %b %d, %Y")}" %>
        </p>

        <p><%= @post.body %></p>
    </div>
    <div class="link-container">
        <div class="left-link"><%= link_to "Likes", '#' %></div>
        <div class="right-link"><%= link_to "Comments", '#' %></div>
    </div>
</div>
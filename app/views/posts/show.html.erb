<div class="post-comment-container">
    <div class="post-container">
        <h2><%= @post.title %></h2>
        <% if current_user == @post.user %>
            <p>
                <%= link_to "Edit", edit_user_post_path(current_user, @post) %> | <%= link_to "Delete", user_post_path(current_user, @post), method: :delete, data: { confirm: 'Are you sure?' } %>
            </p>
        <% end %>
        <p class="italics-format">
            Posted by <%= "#{@post.user.first_name} #{@post.user.last_name}" %> on <%= "#{@post.created_at.strftime("%b %d, %Y, %I:%M %P")}" %>
            <% if @post.created_at != @post.updated_at %>
                | Edited <%= "#{@post.updated_at.strftime("%b %d, %Y, %I:%M %P")}" %>
            <% end %>
        </p>
        <p><%= @post.body %></p>
    </div>
    <%= render 'layouts/like_comment_links', post: @post %>
    <br />

    <%= render 'comments/form' %>
</div>

<%= nested_comments(@post.comments.where(ancestry: nil)) %>